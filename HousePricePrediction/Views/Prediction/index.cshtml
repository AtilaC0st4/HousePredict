@model HousePricePrediction.Models.HouseData

@{
    ViewData["Title"] = "House Price Prediction";
}

<h2>House Price Prediction</h2>

<form asp-action="Predict" method="post">
    <div class="form-group">
        <label asp-for="SqFt">Square Feet:</label>
        <input asp-for="SqFt" class="form-control" />
        <span asp-validation-for="SqFt" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Bedrooms">Bedrooms:</label>
        <input asp-for="Bedrooms" class="form-control" />
        <span asp-validation-for="Bedrooms" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Bathrooms">Bathrooms:</label>
        <input asp-for="Bathrooms" class="form-control" />
        <span asp-validation-for="Bathrooms" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Neighborhood">Neighborhood (1=Suburb, 2=City, 3=Rural):</label>
        <input asp-for="Neighborhood" class="form-control" />
        <span asp-validation-for="Neighborhood" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="YearBuilt">Year Built:</label>
        <input asp-for="YearBuilt" class="form-control" />
        <span asp-validation-for="YearBuilt" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Predict Price</button>
</form>

@if (ViewBag.PredictedPrice != null)
{
    <div class="mt-3">
        <h4>Predicted Price: @ViewBag.PredictedPrice</h4>
    </div>
}