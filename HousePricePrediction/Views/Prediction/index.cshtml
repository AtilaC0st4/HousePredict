@model HousePricePrediction.Models.HouseData

@{
    ViewData["Title"] = "Previsão de Preço de Casa";
}

<h2>Previsão de Preço de Casa</h2>

<form asp-action="Predict" method="post">
    <div class="form-group">
        <label asp-for="SqFt">Área (em pés quadrados):</label>
        <input asp-for="SqFt" class="form-control" min="800" max="3000" />
        <span asp-validation-for="SqFt" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Bedrooms">Quartos:</label>
        <input asp-for="Bedrooms" class="form-control" min="1" max="5" />
        <span asp-validation-for="Bedrooms" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Bathrooms">Banheiros:</label>
        <input asp-for="Bathrooms" class="form-control" min="1" max="4" />
        <span asp-validation-for="Bathrooms" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Neighborhood">Bairro:</label>
        <select asp-for="Neighborhood" class="form-control">
            <option value="1">Subúrbio</option>
            <option value="2">Cidade</option>
            <option value="3">Rural</option>
        </select>
        <span asp-validation-for="Neighborhood" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="YearBuilt">Ano de Construção:</label>
        <input asp-for="YearBuilt" class="form-control" min="1950" max="@DateTime.Now.Year" />
        <span asp-validation-for="YearBuilt" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Prever Preço</button>
</form>

@if (ViewBag.PredictedPrice != null)
{
    <div class="mt-3">
        <h4>Preço Previsto: @ViewBag.PredictedPrice</h4>
    </div>
}